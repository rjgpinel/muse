<mujoco>
    <include file="base_env.xml"></include>

    <asset>
        <texture builtin="flat" type="2d" name="cube0_tex" height="32" width="32" />
        <texture builtin="flat" type="2d" name="cube1_tex" height="32" width="32" />
        <texture builtin="flat" type="2d" name="cube2_tex" height="32" width="32" />
        <!-- <texture builtin="flat" type="2d" name="cube3_tex" height="32" width="32" /> -->

        <material name="cube0_mat" specular="0.5" shininess="0.2" reflectance="0" texture="cube0_tex" />
        <material name="cube1_mat" specular="0.5" shininess="0.2" reflectance="0" texture="cube1_tex" />
        <!-- <material name="cube2_mat" specular="0.5" shininess="0.2" reflectance="0" texture="cube2_tex" /> -->
        <!-- <material name="cube3_mat" specular="0.5" shininess="0.2" reflectance="0" texture="cube3_tex" /> -->
        <texture builtin="flat" type="2d" name="button0_box_tex" height="32" width="32" />
        <material name="button0_box_mat" specular="0.5" shininess="0.2" reflectance="0" texture="button0_box_tex" />
        <texture builtin="flat" type="2d" name="button0_tex" height="32" width="32" />
        <material name="button0_mat" specular="0.5" shininess="0.2" reflectance="0" texture="button0_tex" />
        <texture builtin="flat" type="2d" name="button1_box_tex" height="32" width="32" />
        <material name="button1_box_mat" specular="0.5" shininess="0.2" reflectance="0" texture="button1_box_tex" />
        <texture builtin="flat" type="2d" name="button1_tex" height="32" width="32" />
        <material name="button1_mat" specular="0.5" shininess="0.2" reflectance="0" texture="button1_tex" />
    </asset>


    <worldbody>
      <body childclass="cube" name="cube0" pos="0.025 0.025 0.025">
        <joint name="cube0_joint" />
        <!-- <geom name="cube0" size="0.025 0.025 0.025" type="box"  material="cube0_mat" rgba="0 0.48 0.36 1" /> -->
        <geom name="cube0" size="0.025 0.025 0.025" type="box"  material="cube0_mat" />
        <site name="cube0" size="0.025 0.025 0.025" rgba="1 0 0 1" type="sphere" />
      </body>

      <body childclass="cube" name="cube1" pos="0.025 0.025 0.025">
        <joint name="cube1_joint" />
        <!-- <geom name="cube1" size="0.025 0.025 0.025" type="box"  material="cube1_mat" rgba="0.74 0.13 0.10 1" /> -->
        <geom name="cube1" size="0.025 0.025 0.025" type="box"  material="cube1_mat" />
        <site name="cube1" size="0.025 0.025 0.025" rgba="1 0 0 1" type="sphere" />
      </body>
        <body mocap="true" name="button0_box" pos="-0.6 0.1 0.01">
            <geom name="button0_box" size="0.025 0.025 0.01" type="box"  material="button0_box_mat" rgba="0.886 0.886 0.886 1" />
            <body name="button0" pos="0.0 0.0 0.02">
                <joint name="button0_joint" pos="0 0 0" axis="0 0 1" type="slide" group="3" damping="0" limited="true" range="-0.01 0" />
                <geom name="button0" size="0.015 0.01 0.01" type="cylinder"  material="button0_mat"/>
                <site name="button0_site" size="0.015 0.01 0.01" type="cylinder" rgba="0 0 0 0" />
            </body>
        </body>
    </worldbody>

    <contact>
        <exclude body1="button0_box" body2="button0" />
    </contact>
    <sensor>
        <touch name="button0_sensor" site="button0_site" />
    </sensor>
</mujoco>
