<mujoco>
    <include file="base_env.xml" />
    <size nconmax="6000" njmax="6000" nstack="50000000"/>
    <asset>
        <texture builtin="flat" type="2d" name="broom_tex" height="32" width="32" />
        <material name="broom_mat" specular="0.5" shininess="0.2" reflectance="0" texture="broom_tex" />
        <texture builtin="flat" type="2d" name="marker0_tex" height="32" width="32" />
        <material name="marker0_mat" specular="0.5" shininess="0.2" reflectance="0" texture="marker0_tex" />
        <mesh name="broom" file="./meshes/broom.stl"/>
    </asset>
    <size njmax="8000" nconmax="4000" />
    <worldbody>
        <body name="broom" pos="0.0 0.0 0.0">
            <joint name="broom_joint" />
            <geom name="broom" size="0.0045 0.035 0.035" type="box"  material="broom_mat"/>
        </body>
        <body mocap="true"  name="marker0" pos="-0.5 0.0 0.0001" >
            <site name="marker0" size="0.08 0.08 0.01" pos="0.0 0.0 0.0" rgba="0 0 0 0" type="box" />
            <geom name="marker0" size="0.08 0.08 0.01" type="plane"  material="marker0_mat" mass="10" />
        </body>
    </worldbody>

    <equality>
        <!-- broom to gripper -->
        <weld body1="left_gripper_sweep_frame" body2="broom" solimp="1 1 1" solref="0.001 1"></weld>
    </equality>
    <contact>
        <exclude body1="left_gripper_finger_1_moment_arm" body2="broom" />
        <exclude body1="left_gripper_finger_1_truss_arm" body2="broom" />
        <exclude body1="left_gripper_finger_2_moment_arm" body2="broom" />
        <exclude body1="left_gripper_finger_2_truss_arm" body2="broom" />
        <exclude body1="left_gripper_finger_1_tip" body2="broom" />
        <exclude body1="left_gripper_finger_2_tip" body2="broom" />
        <exclude body1="left_gripper_finger_1_safety_shield" body2="broom" />
        <exclude body1="left_gripper_finger_2_safety_shield" body2="broom" />
    </contact>
</mujoco>

