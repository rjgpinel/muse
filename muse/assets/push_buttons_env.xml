<mujoco>
    <include file="base_env.xml"></include>

    <asset>
        <texture builtin="flat" type="2d" name="button0_box_tex" height="32" width="32" />
        <material name="button0_box_mat" specular="0.5" shininess="0.2" reflectance="0" texture="button0_box_tex" />
        <texture builtin="flat" type="2d" name="button0_tex" height="32" width="32" />
        <material name="button0_mat" specular="0.5" shininess="0.2" reflectance="0" texture="button0_tex" />
        <texture builtin="flat" type="2d" name="button1_box_tex" height="32" width="32" />
        <material name="button1_box_mat" specular="0.5" shininess="0.2" reflectance="0" texture="button1_box_tex" />
        <texture builtin="flat" type="2d" name="button1_tex" height="32" width="32" />
        <material name="button1_mat" specular="0.5" shininess="0.2" reflectance="0" texture="button1_tex" />
        <texture builtin="flat" type="2d" name="button2_box_tex" height="32" width="32" />
        <material name="button2_box_mat" specular="0.5" shininess="0.2" reflectance="0" texture="button2_box_tex" />
        <texture builtin="flat" type="2d" name="button2_tex" height="32" width="32" />
        <material name="button2_mat" specular="0.5" shininess="0.2" reflectance="0" texture="button2_tex" />
        <texture builtin="flat" type="2d" name="button3_box_tex" height="32" width="32" />
    </asset>


    <worldbody>
        <body mocap="true" name="button0_box" pos="0.025 0.025 0.01">
        <geom name="button0_box" size="0.025 0.025 0.01" type="box"  material="button0_box_mat" rgba="0.886 0.886 0.886 1" />
        <body name="button0" pos="0.0 0.0 0.02">
            <joint name="button0_joint" pos="0 0 0" axis="0 0 1" type="slide" group="3" damping="0" limited="true" range="-0.01 0" />
                <geom name="button0" size="0.015 0.01 0.01" type="cylinder"  material="button0_mat"/>
                <site name="button0_site" size="0.015 0.01 0.01" type="cylinder" rgba="0 0 0 0" />
        </body>
      </body>
      <body mocap="true" name="button1_box" pos="0.025 0.025 0.01">
          <geom name="button1_box" size="0.025 0.025 0.01" type="box"  material="button1_box_mat" rgba="0.886 0.886 0.886 1" />
          <body name="button1" pos="0.0 0.0 0.02">
              <joint name="button1_joint" pos="0 0 0" axis="0 0 1" type="slide" group="3" damping="0" limited="true" range="-0.01 0" />
              <geom name="button1" size="0.015 0.01 0.01" type="cylinder"  material="button1_mat" />
              <site name="button1_site" size="0.015 0.01 0.01" type="cylinder" rgba="0 0 0 0" />
          </body>
      </body>
      <body mocap="true" name="button2_box" pos="0.025 0.025 0.01">
          <geom name="button2_box" size="0.025 0.025 0.01" type="box"  material="button2_box_mat" rgba="0.886 0.886 0.886 1" />
          <body name="button2" pos="0.0 0.0 0.02">
              <joint name="button2_joint" pos="0 0 0" axis="0 0 1" type="slide" group="3" damping="0" limited="true" range="-0.01 0" />
              <geom name="button2" size="0.015 0.01 0.01" type="cylinder"  material="button2_mat" />
              <site name="button2_site" size="0.015 0.01 0.01" type="cylinder" rgba="0 0 0 0" />
          </body>
      </body>
    </worldbody>

    <contact>
        <exclude body1="button0_box" body2="button0" />
        <exclude body1="button1_box" body2="button1" />
        <exclude body1="button2_box" body2="button2" />
    </contact>
    <sensor>
        <touch name="button0_sensor" site="button0_site" />
        <touch name="button1_sensor" site="button1_site" />
        <touch name="button2_sensor" site="button2_site" />
    </sensor>

</mujoco>
